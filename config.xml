<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "mx.com.softelligence.Infommodity"
        versionCode="3"
        version   = "1.0.04">

    <!-- versionCode is optional and Android only -->
    <name>Infommodity</name>
    <description>Infommodity</description>
    <author href="http://infommodity.com/" email="eaguilar@softelligence.com.mx">Infommodity</author>

    <!-- Plataformas que soporte -->
    <preference name="phonegap-version" value="3.5.0" />
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <!-- Multi-Platform -->
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
	<preference name="WebViewBounce" value="true" /> 

    <!-- iOS Only -->
    <preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="false" />
    <preference name="ios-statusbarstyle" value="default" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />

    <!-- Android only -->
    <preference name="android-minSdkVersion" value="9" />
    <preference name="android-maxSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-windowSoftInputMode" value="stateUnspecified|adjustResize" />
    <preference name="splash-screen-duration" value="1000"/>
    <preference name="KeyboardShrinksView" value="false" />

    <!-- Splash -->
    <gap:splash src="splash.png" />

    <!-- Icons -->
    <icon src="icon.png" />
    <icon src="imgs/iconos/android/36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="imgs/iconos/android/48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="imgs/iconos/android/96.png" gap:platform="android" gap:density="hdpi" />
    <icon src="imgs/iconos/android/512.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="imgs/iconos/ios/57.png" gap:platform="ios" width="57" height="57" />
    <icon src="imgs/iconos/ios/72.png" gap:platform="ios" width="72" height="72" />
    <icon src="imgs/iconos/ios/114.png" gap:platform="ios" width="114" height="114" />
    <icon src="imgs/iconos/ios/144.png" gap:platform="ios" width="144" height="144" />
    <icon src="imgs/iconos/ios/120.png" gap:platform="ios" width="120" height="120" />
    <icon src="imgs/iconos/ios/152.png" gap:platform="ios" width="152" height="152" />
    <icon src="imgs/iconos/ios/76.png" gap:platform="ios" width="76" height="76" />

    <!-- Permisos -->
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.4.0" />
	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />


    <access origin="*" />
	<content src="index.html" /> 

</widget>
